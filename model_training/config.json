{
    "name": "Stock_20_5",
    "n_gpu": 1,

    "arch": {
        "type": "CNN20d",
        "args": {}
    },
    "data_loader": {
        "type": "StockDataLoader",
        "args":{
            "window_size" : 20,
            "target_day" : 1,
            "transform_type" : "rasterize",
            "pickle_dir" : "./pickle_data",
            "csv_dir" : null,
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "bce_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 30
    }
}
